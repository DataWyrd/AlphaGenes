	<ThingDef ParentName="AG_JunkBuildingBase">
		<defName>AG_RuinedHospitalBed</defName>
		<label>ancient hospital bed</label>
		<description>A bed specially designed for use in hospitals. The matress has rotted away into nothingness.</description>
		<thingClass>Building_Bed</thingClass>
		<altitudeLayer>Building</altitudeLayer>

		<drawGUIOverlay>true</drawGUIOverlay>
		<canOverlapZones>false</canOverlapZones>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<passability>PassThroughOnly</passability>
		<defaultPlacingRot>South</defaultPlacingRot>
		<uiOrder>2020</uiOrder>

		<graphicData>
			<texPath>Things/Building/AG_RuinedHospitalBed</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<castEdgeShadows>True</castEdgeShadows>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>2800</WorkToBuild>
			<Mass>35</Mass>
			<Flammability>1.0</Flammability>
			<BedRestEffectiveness>0.7</BedRestEffectiveness>
			<Comfort>0.6</Comfort>
			<ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
			<MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
			<SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
			<BirthRitualQualityOffset>5</BirthRitualQualityOffset>
		</statBases>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>VitalsMonitor</li>
					<li>EndTable</li>
					<li>Dresser</li>
					<li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_AssignableToPawn">
				<drawAssignmentOverlay>false</drawAssignmentOverlay>
				<compClass>CompAssignableToPawn_Bed</compClass>
			</li>
		</comps>
		<size>(1,2)</size>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<costList>
			<Steel>80</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<building>
			<bed_showSleeperBody>False</bed_showSleeperBody>
			<bed_healPerDay>10</bed_healPerDay>
		
			<buildingSizeCategory>Small</buildingSizeCategory>
			<paintable>true</paintable>
			<buildingTags>
				<li>Bed</li>
			</buildingTags>
		</building>
		<fillPercent>0.4</fillPercent>
		<pathCost>42</pathCost>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<staticSunShadowHeight>0.17</staticSunShadowHeight>

		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<techLevel>Industrial</techLevel>
		<uiIconScale>0.90</uiIconScale>
	</ThingDef>

	<ThingDef ParentName="AG_JunkBuildingBase">
		<defName>AG_AncientShelf</defName>
		<label>ancient shelf</label>
		<description>A rusted triple-stack shelf. It doesn't hold as many items as it once had, due to its state of disrepair.</description>
		<thingClass>Building_Storage</thingClass>
		<graphicData>
			<texPath>Things/Building/AG_RuinedShelf</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,2)</drawSize>
		</graphicData>
		<size>(2,1)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.4</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<pathCost>50</pathCost>
		<costList>
			<Steel>1</Steel>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</costList>
		<defaultPlacingRot>South</defaultPlacingRot>
		<statBases>
			<Flammability>1.0</Flammability>
			<Beauty>-5</Beauty>

			<MaxHitPoints>100</MaxHitPoints> 
			<Mass>8</Mass>
			<WorkToBuild>500</WorkToBuild>

		</statBases>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>2</maxItemsInCell>
			<storageGroupTag>Shelf</storageGroupTag>
			<blueprintClass>Blueprint_Storage</blueprintClass>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<li>Root</li>
					</categories>
					<disallowedCategories>
						<li>Chunks</li>
						<li>Plants</li>
						<li>Buildings</li>
					</disallowedCategories>
					<disallowedThingDefs MayRequire="Ludeon.RimWorld.Biotech">
						<li MayRequire="Ludeon.RimWorld.Biotech">Wastepack</li>
					</disallowedThingDefs>
					<specialFiltersToDisallow>
						<li>AllowLargeCorpses</li>
					</specialFiltersToDisallow>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Foods</li>
						<li>Manufactured</li>
						<li>ResourcesRaw</li>
						<li>Items</li>
						<li>Weapons</li>
						<li>Apparel</li>
						<li>BodyParts</li>
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>

		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<canOverlapZones>false</canOverlapZones>

	</ThingDef>

	


</Defs>